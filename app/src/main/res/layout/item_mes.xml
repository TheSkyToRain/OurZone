<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mes_item">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mes_item_icon"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:riv_border_width="1dp"
            app:riv_border_color="#fff"
            app:riv_oval="true"
            app:riv_corner_radius="15dp"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mes_item_icon"
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/mes_item_username"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="蒋蒙"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/mes_item_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="曾经有个女的想改造我，结果她在最后只拆了我的零件，却再也没跟我装上…"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/mes_item_time"
            android:textSize="12sp"
            android:text="13:30"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>
</LinearLayout>